---
import BaseHead from "../components/BaseHead.astro";
import Sidebar from "../components/Sidebar.astro";
const { title = "", description = "" } = Astro.props;
---

<html lang="zh-CN">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <div class="app">
      <aside class="sidebar">
        <Sidebar />
      </aside>

      <main class="main">
        <div class="main-inner">
          <slot />
        </div>
      </main>

      <aside class="rightbar">
        <div class="rightbar-inner">
          <slot name="right" />
        </div>
      </aside>
    </div>
  </body>
</html>

<style>
  html,
  body {
    height: 100%;
    margin: 0;
    overflow-y: auto;
  }

  .app {
    display: grid;
    grid-template-columns: minmax(200px, 240px) minmax(0, 1fr) 280px;
    min-height: 100vh;
    width: min(100vw, 1580px);
    margin: 0 auto;
    padding: 16px 0;
    box-sizing: border-box;
  }

  .sidebar {
    position: sticky;
    top: 16px;
    align-self: start;
    height: calc(100vh - 32px);
    overflow: hidden;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .sidebar::-webkit-scrollbar {
    display: none;
  }

  .main {
    height: 100%;
    overflow: visible;
    width: 100%;
    max-width: none;
    margin: 0;
    padding: 24px 24px 32px 24px;
    min-width: 0;
    box-sizing: border-box;
  }

  .main-inner {
    min-height: 100%;
    box-sizing: border-box;
  }

  .rightbar {
    position: sticky;
    top: 16px;
    align-self: start;
    height: calc(100vh - 32px);
    overflow: hidden;
  }

  .rightbar-inner {
    padding: 24px 24px 32px 0;
    box-sizing: border-box;
  }
</style>
