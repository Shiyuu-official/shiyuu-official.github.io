---
interface Props {
	date: Date;
	format?: "short" | "ymd";
}

const { date, format = "short" } = Astro.props;
const ymd = date.toISOString().slice(0, 10);
---

<time datetime={date.toISOString()}>
	{format === "ymd"
		? ymd
		: date.toLocaleDateString("en-us", {
				year: "numeric",
				month: "short",
				day: "numeric",
			})}
</time>
